{% extends "AppBundle::layout.html.twig" %}
{% block body%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="rose">
                        <i class="material-icons">fact_check</i>
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">New Match event</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        {{form_start(form)}}
                        <div class="row">
                            <div class="col-md-2">
                                <div class="fileinput fileinput-new text-center" style="    width: 100%;" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="    ">
                                        <img  id="img-preview" src="{{asset(form.vars.value.media.link)|imagine_filter('action_thumb')}}"  width="100%">
                                        <a href="#" class="btn btn-success btn-round btn-select"><i class="material-icons">image</i> Icon </a>
                                    </div>
                                    {{form_widget(form.file,{"attr":{"class":"file-hidden input-file img-selector","style":"    display: none;"}})}}
                                    <span class="validate-input">{{form_errors(form.file)}}</span>
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label">Event name</label>
                                    {{form_widget(form.title,{"attr":{"class":"form-control"}})}}
                                    <span class="validate-input">{{form_errors(form.title)}}</span>
                                </div>
                                <span class="pull-right"><a href="{{path("app_action_index")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_back</i> Cancel</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-success"}})}}</span>
                            </div>
                        </div>
                        {{form_end(form)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock%}
{% extends "AppBundle::layout.html.twig" %}
{% block body%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="tab-moivie tab-channel">
                        <a href="{{path("app_home_settings")}}" class="btn btn-tab-movie col-md-12"><i class="material-icons">phonelink_setup</i> Mobile Settings</a>
                        <a href="{{path("app_home_notifications")}}" class="btn btn-tab-movie-active col-md-12"><i class="material-icons">notifications</i> Notifications Settings</a>
                        <a href="{{path("app_home_ads")}}" class="btn btn-tab-movie col-md-12"><i class="material-icons">show_chart</i> Android Ads Settings</a>
                        <a href="{{path("app_home_ios_ads")}}" class="btn btn-tab-movie col-md-12"><i class="material-icons">show_chart</i> iOS Ads Settings</a>                        <a href="{{path("app_home_edit_privacypolicy")}}" class="btn btn-tab-movie col-md-12"><i class="material-icons">privacy_tip</i> Privacy Policy</a>
                        <a href="{{path("admin_change_password")}}" class="btn btn-tab-movie col-md-12"><i class="material-icons">lock</i> Change password</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="rose">
                        <i class="material-icons">notifications</i>
                    </div>
                    {{form_start(form)}}
                    <div class="card-content">
                        <h4 class="card-title">Notifications Settings</h4>
                        <br>
                        <div class="form-group label-floating">
                            <label class="control-label">Firebase server key : </label>
                            {{form_widget(form.firebasekey,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.firebasekey)}}</span>
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Comments notifications : </label>
                            {{form_widget(form.commentnotification,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.commentnotification)}}</span>
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Approved status notifications : </label>
                            {{form_widget(form.reviewnotification,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.reviewnotification)}}</span>
                        </div>
                        <span class="pull-right">{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>
                    </div>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock%}
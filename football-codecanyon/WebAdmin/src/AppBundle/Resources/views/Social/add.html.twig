{% extends "AppBundle::layout.html.twig" %}
{% block body%}
    <div class="container-fluid">
        <div class="row">
            {{form_start(form)}}
            <div class="col-sm-offset-2 col-md-8">
                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="rose">
                        <i class="material-icons">public</i>
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">New Social media</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="fileinput fileinput-new text-center" style="    width: 100%;" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="    ">
                                        <img  id="img-preview" src="{{asset("img/image_placeholder_product.jpg")|imagine_filter('social_icon')}}"  width="100%">
                                        <a href="#" class="btn btn-rose btn-round btn-select"><i class="material-icons">image</i> icon </a>
                                    </div>
                                    {{form_widget(form.file,{"attr":{"class":"file-hidden input-file img-selector","style":"    display: none;"}})}}
                                    <span class="validate-input">{{form_errors(form.file)}}</span>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label">Website name</label>
                                    {{form_widget(form.social,{"attr":{"class":"form-control"}})}}
                                    <span class="validate-input">{{form_errors(form.social)}}</span>
                                </div>
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label">Username (Optional)</label>
                                    {{form_widget(form.username,{"attr":{"class":"form-control"}})}}
                                    <span class="validate-input">{{form_errors(form.username)}}</span>
                                </div>
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label">Website link</label>
                                    {{form_widget(form.value,{"attr":{"class":"form-control"}})}}
                                    <span class="validate-input">{{form_errors(form.value)}}</span>
                                </div>
                                <div class="form-group label-floating is-empty">
                                    <label class="control-label">Website color</label>
                                    {{form_widget(form.color,{"attr":{"class":"jscolor"}})}}
                                    <span class="validate-input">{{form_errors(form.color)}}</span>
                                </div>
                                <span class="pull-right"><a href="{{path("app_team_index")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_back</i> Cancel</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-success"}})}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{form_end(form)}}
    </div>
{% endblock%}
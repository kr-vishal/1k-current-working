{% extends "AppBundle::layout.html.twig" %}
{% block body%}
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-offset-1 col-md-10">
        <div class="card">
          <div class="card-header card-header-icon" data-background-color="rose">
            <i class="material-icons">format_quote</i>
          </div>
          <div class="card-content">
            <h4 class="card-title">New Quote</h4>
            {{form_start(form)}}
              <br>
              <div class="form-group label-floating ">
                  <label class="control-label">Quote</label>
                  {{form_widget(form.description,{"attr":{"class":"textarea-quotes","data-emojiable":"true","data-emoji-input":"unicode"}})}}
                  <span class="validate-input">{{form_errors(form.description)}}</span>
              </div>
              <div class="form-group label-floating ">
                  <label class="control-label">Background quote</label>
                  {{form_widget(form.color,{"attr":{"value":"#634FFF","class":"input-color jscolor"}})}}
                  <span class="validate-input">{{form_errors(form.color)}}</span>
              </div>
              <div class="">
                    <label>
                      {{form_widget(form.enabled)}}  Enabled
                    </label>
              </div>
              <div class="">
                    <label>
                      {{form_widget(form.comment)}}  Enabled Comment
                    </label>
              </div>
              
              <br>
                <script>

                $(function(){
                  setTimeout(function(){ 
                     $(".textarea-quotes").css("background-color","#"+$("#quote_color").val());
                   }, 500);
                    $("#quote_color").change(function(){
                      $(".textarea-quotes").css("background-color","#"+$(this).val());
                      $(".quote-view").css("background-color","#"+$(this).val());
                    })
                });
                </script>
              <br>
              <span class="pull-right"><a href="{{path("app_status_index")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_back</i> Cancel</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>
            {{form_end(form)}}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock%}